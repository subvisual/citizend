{
  "name": "@discovery-dao/web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "bundle": "rm -rf ${OUT_DIR:-dist} .next && yarn build && next export -o ${OUT_DIR:-dist}",
    "copy:contracts": "rm -rf ./contracts && cp -r ../contracts/deployments ./contracts",
    "lint": "yarn lint:js && next lint && yarn lint:styles && yarn lint:types",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:styles": "stylelint 'src/**/*.@(ts|tsx|js)'",
    "lint:types": "tsc --noEmit",
    "precommit": "lint-staged",
    "start": "next dev"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "bash -c tsc --noEmit"
    ],
    "*.@(ts|tsx|js)": [
      "prettier --write --ignore-unknown",
      "eslint",
      "stylelint"
    ],
    "package.json": [
      "sort-package-json"
    ],
    "yarn.lock": [
      "yarn-deduplicate"
    ]
  },
  "dependencies": {
    "@discovery-dao/contracts": "*",
    "@ethersproject/providers": "^5.6.2",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/walletconnect-connector": "^6.2.13",
    "bignumber.js": "^9.0.2",
    "date-fns": "^2.28.0",
    "lodash": "^4.17.21",
    "next": "^12.0.4",
    "react": "^17.0.2",
    "react-async": "^10.0.1",
    "react-countdown": "^2.3.2",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.4",
    "react-transition-group": "^4.4.2",
    "styled-components": "^5.2.3",
    "styled-normalize": "^8.0.7",
    "styled-tools": "^1.7.2",
    "webpack-bundle-size-analyzer": "^3.1.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.1.4",
    "@types/node": "^17.0.9",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.12",
    "@types/react-modal": "^3.13.1",
    "@types/styled-components": "^5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@untile/eslint-config-untile-react": "^1.0.0",
    "@untile/stylelint-config-untile": "^1.0.0",
    "eslint": "^7.23.0",
    "eslint-config-next": "^12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.1",
    "prettier-eslint": "^13.0.0",
    "sort-package-json": "^1.49.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^9.0.3",
    "svg-inline-loader": "^0.8.2",
    "typescript": "^4.6.2",
    "yarn-deduplicate": "^4.0.0"
  },
  "engines": {
    "node": ">= 14.17.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.0"
  }
}
